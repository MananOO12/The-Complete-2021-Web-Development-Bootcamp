<%- include('header'); -%>

  <div class="box" id="heading">
    <h1><%= kindofday %> </h1>
  </div>

  <div class="box">
    <% newItems.forEach(function(newItem){ %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="check" value="<%= newItem._id %>"onChange="this.form.submit()">
          <p>  <%= newItem.name %> </p>
        </div>
        <% l = kindofday %>
        <input type="hidden" name="listName" value="<%= l %>">
      </form>
    <% }); %>

    <form class="box" class="item" action="/" method="post">
      <input type="text" name="new" placeholder="Add New Item" autocomplete="off">
      <button type="submit" name="button" value=<%= l %>>+</button>
    </form>
  </div>

<%- include('footer'); -%>
